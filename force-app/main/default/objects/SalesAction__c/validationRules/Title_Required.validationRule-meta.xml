<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Title_Required</fullName>
    <active>true</active>
    <description>タイトルは必須（空白のみも不可）</description>
    <errorConditionFormula>LEN(TRIM(Title__c)) = 0</errorConditionFormula>
    <errorDisplayField>Title__c</errorDisplayField>
    <errorMessage>タイトルは必須です</errorMessage>
</ValidationRule>
